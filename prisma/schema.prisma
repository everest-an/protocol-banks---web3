  @@index([key_prefix])
  @@index([owner_address])
  @@map("api_keys")
}

model ApiKeyUsageLog {
  id               String   @id @default(uuid())
  api_key_id       String
  endpoint         String
  method           String
  status_code      Int
  response_time_ms Int
  ip_address       String?
  user_agent       String?
