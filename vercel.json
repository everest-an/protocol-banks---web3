{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/process-batch",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/execute-scheduled-payments",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/budget-reset",
      "schedule": "30 * * * *"
    },
    {
      "path": "/api/cron/settlement-reconciliation",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-idempotency",
      "schedule": "15 * * * *"
    },
    {
      "path": "/api/cron/stalled-transactions",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/retry-batch-items",
      "schedule": "*/5 * * * *"
    }
  ]
}
